<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/cart.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length > 0) { %>
                <ul class="cart__item-list">
                    <% orders.forEach(order => { %>
                        <li class="cart__item">
                            <h1>Number: <%= order.id %></h1>
                            <h2>Date: <% let date = new Date(order.createdAt); %><%= '' + date.getDate() + '/' + (date.getMonth() + 1) + '/' + date.getFullYear() %></h2>
                            <form action="/orders-details" method="POST">
                                <input type="hidden" value="<%= order.id %>" name="orderId">
                                <button class="btn" type="submit">Details</button>
                            </form>
                        </li>
                    <% }) %>
                </ul><br/>
            <% } else { %>
                <h1>No Orders registered!</h1>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>